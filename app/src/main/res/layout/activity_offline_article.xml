<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" tools:context=".OfflineArticleActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <include layout="@layout/nav_header_main"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                <ToggleButton
                        android:id="@+id/button_signets"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/check_save"
                        android:layout_margin="5dp"
                        android:checked="true"
                        android:textOn=""
                        android:textOff=""/>
                <ToggleButton
                        android:id="@+id/button_tts"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/check_tts"
                        android:layout_margin="5dp"
                        android:checked="false"
                        android:textOn=""
                        android:textOff=""/>

                <Button
                        android:id="@+id/button_share_sms"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_sms"
                        android:layout_margin="5dp"/>
                <Button
                        android:id="@+id/button_share_mail"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_email"
                        android:layout_margin="5dp"/>

                <ToggleButton
                        android:id="@+id/button_save"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/check_save"
                        android:layout_margin="5dp"
                        android:checked="true"
                        android:textOn=""
                        android:textOff=""/>
            </LinearLayout>
            <TextView
                    android:id="@+id/news_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Title goes here"
                    android:textColor="@color/colorAccent"
                    android:textSize="25dp"
                    android:textStyle="bold"

            />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/cardview_default_elevation"
                    android:orientation="vertical"
                    android:padding="@dimen/cardview_default_elevation">


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                        <TextView
                                android:id="@+id/news_cat"
                                style="@style/TextAppearance.MaterialComponents.Caption"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Category goes here"
                                android:textAlignment="center"
                                android:textColor="@color/colorAccent"
                                android:textDirection="anyRtl"
                        />
                        <View
                                android:id="@+id/divider"
                                android:layout_width="100dp"
                                android:layout_height="2dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/colorAccent"/>
                        <TextView
                                android:id="@+id/news_des"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Content Description Goes here"
                                android:textColor="@color/colorText"
                        android:textSize="20dp"/>
                        <TextView
                                android:id="@+id/news_src"
                                style="@style/TextAppearance.MaterialComponents.Caption"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:text="source/date go here"
                                android:textAlignment="textEnd"
                                android:textColor="@color/colorAccent"
                                android:textDirection="anyRtl"
                        />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>